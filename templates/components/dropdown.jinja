<div id="dropdown-container" class="w-full">
    <label class="label">
        <span class="label-text">Choose an image</span>
    </label>
    <select id="image-select" class="select select-bordered w-full">
        {% if images %}
            <option value="" selected>Select an image</option>
            {% for image in images %}
                <option
                    value="{{ image }}"
                    data-url="{{ url_for('select_image') }}?img={{ image | urlencode }}"
                >
                    {{ image }}
                </option>
            {% endfor %}
        {% else %}
            <option value="" selected disabled>No images found</option>
        {% endif %}
    </select>
</div>
